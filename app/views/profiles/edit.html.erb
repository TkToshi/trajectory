<body class= "body_edit">
  <div class="edit-profile-container">
    <div class="edit-profile-box">
      <h2>Edit Profile</h2>
      <%= form_for @profile, html: { multipart: true } do |f| %>
      <div class="field_edit"> 
        <%= f.label :profile_image, "Profile Image" %><br /> 
        <%= f.file_field :profile_image %>
      </div>
 
      <div class="field_edit">
        <%= f.label :user_profile, "introduction" %> <br />  
        <%= f.text_area :user_profile, rows: 3 %>
      </div>
      <div class="field_edit">
        <%= f.label :gender_id, "Gender"%> <br />  
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender"}) %>
      </div>

      <div class="actions"> 
        <%= f.submit "Save Changes", class: "save-button" %> 
      </div> 
      <% end %>
      <div class="cancel-button">
        <%= link_to "Delete", profile_path(@profile.id), data: { turbo_method: :delete }, class: "delete-button" %>
      </div>
        <%= link_to "Back", :back, class: "back-button" %>
    </div>
  </div>
</body>